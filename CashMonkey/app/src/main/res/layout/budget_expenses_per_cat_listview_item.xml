<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/transaction_daily_ll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="4dp"
    android:paddingTop="4dp"
    android:paddingEnd="8dp"
    android:paddingStart="8dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical">


        <TextView
            android:id="@+id/budget_cat_tran_date"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginRight="10dp"
            android:foregroundGravity="center_vertical|center_horizontal"
            android:gravity="center_vertical|center_horizontal"
            android:text="01"
            android:textColor="@color/mdtp_line_dark"
            android:textSize="30sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:id="@+id/megshit">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/budget_cat_tran_fullname"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="top|left"
                    android:text="Wendsday"
                    android:textColor="@color/mdtp_line_dark"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/bugdeted_cat_amount"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:elevation="1dp"
                    android:gravity="right|center_vertical"
                    android:text="R 95483.00"
                    android:textAppearance="?attr/textAppearanceListItem"
                    android:textColor="@color/expense_Red"

                    android:textSize="14sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/budget_cat_tran_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top|left"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/mdtp_line_dark"
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit"
                android:textSize="12sp" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>
