<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="12dp"
    android:id="@+id/transaction_daily_card"
    android:layout_marginEnd="5dp"
    android:layout_marginStart="5dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="5dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/transaction_daily_ll">


        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="8dp"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:paddingBottom="8dp"
            android:gravity="center_vertical">


            <TextView
                android:text="01"
                android:layout_width="@dimen/list_item_avatar_size"
                android:textSize="35sp"
                android:layout_marginRight="10dp"
                android:id="@+id/transaction_daily_day"
                android:layout_height="match_parent"
                android:gravity="center_vertical|center_horizontal"
                android:layout_gravity="center_vertical|center_horizontal"
                android:foregroundGravity="center_vertical|center_horizontal" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical">

                <TextView
                    android:text="Wendsday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/transaction_daily_day_name"
                    android:textSize="12sp"
                    android:gravity="top|left" />

                <TextView
                    android:text="August 2016"
                    android:layout_width="match_parent"
                    android:id="@+id/transaction_daily_monthAndYear"
                    android:textSize="12sp"
                    android:gravity="top|left"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <TextView
                android:id="@+id/transaction_daily_amount"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAppearance="?attr/textAppearanceListItem"
                android:text="-R 95483.00"
                android:textColor="@color/expense_Red"
                android:textStyle="normal|bold"
                android:textSize="15sp"

                android:elevation="1dp"
                android:gravity="right|center_vertical" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/card_devider"
            android:layout_marginBottom="5dp"></View>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/lll"
            android:layout_marginBottom="8dp"></LinearLayout>


    </LinearLayout>
</android.support.v7.widget.CardView>